<% layout("layouts/boilerplate") %>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filter {
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter,
  p {
    font-size: 0.8rem;
  }
  .tax-toggle {
    display: flex;
    border: 1px solid black;
    border-radius: 1rem;
    height: 2.5rem;
    padding: 1rem;
    align-items: center;
    /* margin-left: 2rem; */
  }
  .tax-info {
    display: none;
  }
</style>
<body>
  <!-- <h3>All Listings</h3> -->
  <div id="filters">
    <div class="filter">
      <div>
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-mountain-city"></i>
        <p>Iconic City</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-mountain"></i>
        <p>Mountain</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castles</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-person-swimming"></i>
        <p>Swimming Pools</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-brands fa-galactic-republic"></i>
        <p>Arctic</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-umbrella-beach"></i>
        <p>Beach</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-key"></i>
        <p>New</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-igloo"></i>
        <p>Domes</p>
      </div>
    </div>
    <div class="filter">
      <div>
        <i class="fa-solid fa-ship"></i>
        <p>Bosts</p>
      </div>
    </div>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label
          style="display: inline"
          class="form-check-label"
          for="flexSwitchCheckDefault"
          >Display Total After Tax</label
        >
      </div>
    </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListing){ %>
    <a href="/listings/<%= listing._id%>" class="listing-link">
      <div class="card col">
        <img
          src="<%= listing.image.url%>"
          style="height: 15rem"
          class="card-img-top"
          alt="listing_image"
        />
        <div class="card-body">
          <p class="card-text">
            <span><b><%=listing.title%></b></span
            ><br /><span
              >&#8377;<%=(listing.price.toLocaleString("en-IN"))%>/Night</span
            >
            <i class="tax-info">&nbsp; +18 % GST</i>
          </p>
          <div class="card-img-overlay"></div>
        </div>
      </div>
    </a>
    <%} %>
  </div>
</body>

<script>
  const taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxIngo = document.getElementsByClassName("tax-info");
    for (info of taxIngo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
